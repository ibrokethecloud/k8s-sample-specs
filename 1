apiVersion: apps/v1beta2
kind: StatefulSet
metadata:
  labels:
    app: hello-world
  name: hello-world
spec:
  replicas: 2
  serviceName: hello-world
  selector:
    matchLabels:
      app: hello-world
  strategy:
    updateStrategy:
      type: RollingUpdate
  template:
    metadata:
      labels:
        app: hello-world
    spec:
      containers:
      - image: rancher/hello-world
        imagePullPolicy: Always
        name: hello-world
        ports:
        - containerPort: 80
          protocol: TCP
      restartPolicy: Always
      TerminationGracePeriodSeconds: 10
